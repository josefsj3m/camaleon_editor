<form>
    <fieldset>
        <legend><%= I18n.t('views.style_settings.background_image') %></legend>
        <div class='col-md-12'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.image') %></label>
                <input placeholder="Upload your image or paste an URL" type="url" class="form-control bg_image file_upload" name="b-img" />
            </div>
        </div>
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.position') %></label>
                <select class="form-control pos_bg" name="b-pos">
                    <option value=""><%= I18n.t('views.style_settings.default') %></option>
                    <option value="left top"><%= I18n.t('views.style_settings.left_top') %></option>
                    <option value="left center"><%= I18n.t('views.style_settings.left_center') %></option>
                    <option value="left bottom"><%= I18n.t('views.style_settings.left_bottom') %></option>
                    <option value="center top"><%= I18n.t('views.style_settings.center_top') %></option>
                    <option value="center center"><%= I18n.t('views.style_settings.center_center') %></option>
                    <option value="center bottom"><%= I18n.t('views.style_settings.center_bottom') %></option>
                    <option value="right top"><%= I18n.t('views.style_settings.right_top') %></option>
                    <option value="right center"><%= I18n.t('views.style_settings.right_center') %></option>
                    <option value="right bottom"><%= I18n.t('views.style_settings.right_bottom') %></option>
                </select>
            </div>
        </div>
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.repeat') %></label>
                <select class="repeat_bg form-control" name="b-r">
                    <option value="no-repeat"><%= I18n.t('views.style_settings.no_repeat') %></option>
                    <option value="repeat"><%= I18n.t('views.style_settings.repeat') %></option>
                </select>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.size') %></label>
                <select class="form-control size_bg" name="b-s">
                    <option value=""><%= I18n.t('views.style_settings.normal') %></option>
                    <option value="contain"><%= I18n.t('views.style_settings.contain') %></option>
                    <option value="cover"><%= I18n.t('views.style_settings.cover') %></option>
                </select>
            </div>
        </div>
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.attachment') %></label>
                <select class="form-control attach_bg" name="b-a">
                    <option value=""><%= I18n.t('views.style_settings.normal') %></option>
                    <option value="fixed"><%= I18n.t('views.style_settings.fixed') %></option>
                </select>
            </div>
        </div>
    </fieldset>

    <div class="row">
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.background_color') %></label>
                <div class="input-group color panel_color" data-color="" data-color-format="rgba">
                    <input type="text" class="form-control input-value color_bg" name="b-c" value="">
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
        </div>
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.text_color') %></label>
                <div class="input-group panel_color color" data-color="">
                    <input type="text" class="form-control input-value text_bg" name="t-c" value="">
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <fieldset>
        <legend>Border</legend>
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.color') %></label>
                <div class="input-group panel_color color" data-color="">
                    <input type="text" class="form-control input-value color_border" name="bo-c" value="">
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
        </div>
        <div class='col-md-6'>
            <div class="form-group">
                <label class="control-label"><%= I18n.t('views.style_settings.width') %></label>
                <input type="number" class="form-control input-value border_width" name="bo-c" value="">
            </div>
        </div>
    </fieldset>

    <div class="form-group"><label class="control-label"><%= I18n.t('views.style_settings.margin') %></label>
        <div class="input-group"><span class="input-group-addon"><%= I18n.t('views.style_settings.top') %> </span>
            <input class="form-control" type="number" name="m-t"> <span class="input-group-addon"><%= I18n.t('views.style_settings.right') %> </span>
            <input type="number" class="form-control" name="m-r"> <span class="input-group-addon"><%= I18n.t('views.style_settings.bottom') %> </span>
            <input class="form-control" type="number" name="m-b"> <span class="input-group-addon"><%= I18n.t('views.style_settings.left') %> </span>
            <input class="form-control" type="number" name="m-l">
        </div>
    </div>

    <div class="form-group"><label class="control-label"><%= I18n.t('views.style_settings.padding') %></label>
        <div class="input-group"><span class="input-group-addon"><%= I18n.t('views.style_settings.top') %> </span>
            <input class="form-control" type="number" name="p-t"> <span class="input-group-addon"><%= I18n.t('views.style_settings.right') %> </span>
            <input type="number" class="form-control" name="p-r"> <span class="input-group-addon"><%= I18n.t('views.style_settings.bottom') %> </span>
            <input class="form-control" type="number" name="p-b"> <span class="input-group-addon"><%= I18n.t('views.style_settings.left') %> </span>
            <input class="form-control" type="number" name="p-l">
        </div>
    </div>
</form>